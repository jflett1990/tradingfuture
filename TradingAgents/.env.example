# TradingAgents Environment Configuration
# Copy this file to .env and set your actual values
# DO NOT commit .env to version control

# =============================================================================
# TRADING ENVIRONMENT
# =============================================================================
TRADING_ENV=development  # development, testing, production
DEBUG=true

# =============================================================================
# AI/LLM PROVIDERS (Choose one primary provider)
# =============================================================================

# Anthropic Claude (Recommended for trading analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# INTERACTIVE BROKERS CONFIGURATION
# =============================================================================

# Paper Trading (Safe for testing)
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1

# Live Trading (Use with extreme caution)
# IB_HOST=127.0.0.1
# IB_PORT=7496
# IB_CLIENT_ID=1

# =============================================================================
# NEWS AND DATA PROVIDERS
# =============================================================================

# News API for market news
NEWSAPI_KEY=your_newsapi_key_here

# Finnhub for financial data
FINNHUB_KEY=your_finnhub_key_here

# Alpha Vantage for additional market data
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# =============================================================================
# RISK MANAGEMENT SETTINGS
# =============================================================================

# Daily loss limits (in USD)
MAX_DAILY_LOSS=5000.0

# Position limits
MAX_POSITIONS_PER_SYMBOL=5
MAX_TOTAL_POSITIONS=20

# Drawdown protection (percentage)
MAX_DRAWDOWN_PCT=10.0

# Leverage limits
MAX_LEVERAGE=10.0

# =============================================================================
# TRADING STYLE CONFIGURATION
# =============================================================================

# Default trading style: swing, scalping, day_trading
DEFAULT_TRADING_STYLE=swing

# Enable paper trading mode (recommended for testing)
PAPER_TRADING_MODE=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Prometheus metrics server
PROMETHEUS_PORT=8500

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed trade logging
DETAILED_LOGGING=true

# =============================================================================
# DATABASE AND STORAGE
# =============================================================================

# Redis for caching (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Results directory
RESULTS_DIR=./results

# Data cache directory
DATA_CACHE_DIR=./data_cache

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable high-frequency data feeds
ENABLE_HF_DATA=false

# Enable advanced order types
ENABLE_ADVANCED_ORDERS=false