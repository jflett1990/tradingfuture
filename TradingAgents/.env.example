# Interactive Brokers Configuration
IB_HOST=127.0.0.1
IB_PORT=7497              # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1            # Unique client ID for your connection

# IB Risk Management
IB_MAX_POSITION_VALUE=100000   # Maximum position value in USD
IB_MAX_DAILY_LOSS=5000         # Maximum daily loss in USD  
IB_MAX_OPEN_ORDERS=20          # Maximum concurrent orders

# IB Trading Settings
IB_PAPER_TRADING=true          # Set to false for live trading
IB_ENABLE_STREAMING=true       # Enable real-time market data

# Claude 4 (Anthropic) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Trading System Configuration
TRADINGAGENTS_RESULTS_DIR=./ib_trading_results

# News and Data Sources (optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FRED_API_KEY=your_fred_key_here

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9000